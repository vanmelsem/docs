{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",

  "name": "Fizyr Documentation",
  "colors": {
    "primary": "#0BA9BC",
    "light": "#0BA9BC",
    "dark": "#0BA9BC"
  },
  "appearance": {
    "default": "dark"
  },

  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "icon": "book-open",
        "groups": [
          {
            "group": "Get Started",
            "icon": "rocket",
            "pages": ["introduction", "library"]
          },
          {
            "group": "Partner Resources",
            "icon": "handshake",
            "pages": [
              "partner/index",
              "partner/software",
              {
                "group": "Documentation",
                "icon": "files",
                "pages": [
                  "partner/documentation/system-requirements",
                  "partner/documentation/system-overview",
                  "partner/documentation/camera-setup",
                  "partner/documentation/calibration",
                  "partner/documentation/server-configuration"
                ]
              },
              {
                "group": "API",
                "icon": "plug",
                "pages": [
                  "partner/api/overview",
                  "partner/api/rpc-protocol",
                  "partner/api/pick-server",
                  "partner/api/detection-server",
                  "partner/api/placement-verification-server",
                  "partner/api/supervisor",
                  {
                    "group": "Plugins",
                    "icon": "puzzle",
                    "pages": [
                      "partner/api/plugins/yaskawa",
                      "partner/api/plugins/fanuc"
                    ]
                  }
                ]
              },
              "partner/marketing",
              "partner/cell-design"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "code-2",
        "groups": [
          {
            "group": "API Documentation",
            "icon": "book",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoint Examples",
            "icon": "terminal",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.fizyr.com",
          "icon": "book"
        },
        {
          "anchor": "Community",
          "href": "https://www.linkedin.com/company/fizyr/",
          "icon": "linkedin"
        },
        {
          "anchor": "Blog",
          "href": "https://fizyr.com/blog",
          "icon": "rss"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@fizyr.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Contact Us",
      "href": "https://fizyr.com/contact/"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/fizyr/",
      "youtube": "https://www.youtube.com/@fizyr"
    }
  }
}
